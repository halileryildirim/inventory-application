<h1>
    <%=title%>
</h1>

<form method="POST">
    <div class="form-group">
        <label for="name">Category: </label>
        <input id="name" class="form-control" type="text" name="name" placeholder="Action, Adventure etc." required
            value="<%= typeof category === 'undefined' ? '' : category.name%>">
        <button class="btn btn-primary" type="submit" style="margin-top: 8px;">Submit</button>
    </div>
</form>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul>
        <% errors.forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }); %>
    </ul>
<% } %>