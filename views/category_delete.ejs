<h1>
    <%= title %>
</h1>

<%if(category_games.length) {%>
    <p><strong>Delete the following games before attempting to delete this author.</strong></p>
    <div style="margin-left: 20px; margin-top: 20px;">
        <h4>Books</h4>
        <dl>
            <% for(let game of category_games) {%>
                <dt>
                    <a href="<%=game.url%>">
                        <%=game.name%>
                    </a>
                </dt>
                <dd>
                    <%=game.description%>
                </dd>
                <% }%>
        </dl>
    </div>

<%} else {%>
    <p>Do you really want to delete this category?</p>
    <form method="POST">
        <div class="form-group">
            <input type="hidden" id="categoryid" class="form-control" name="categoryid" value="<%=category._id%>">
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<% } %>